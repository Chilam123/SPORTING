<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.YueDetailsNoCartActivity">

    <!--toolbar-->
    <include
        layout="@layout/mytoolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_publisher_touxiang_yue_details"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/test_touxiang_girl" />

                <TextView
                    android:id="@+id/text_publisher_name_yue_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/image_publisher_touxiang_yue_details"
                    android:text="Merry"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_cart_description_yue_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/text_publisher_name_yue_details"
                    android:background="@drawable/text_shape_publisher"
                    android:text="无卡"
                    android:textColor="@color/white"
                    android:textSize="12sp"

                    />

                <TextView
                    android:id="@+id/text_publisher_sex_yue_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_publisher_name_yue_details"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/image_publisher_touxiang_yue_details"
                    android:text="女"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text_publisher_tag_yue_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_publisher_name_yue_details"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/text_publisher_sex_yue_details"
                    android:text="健身小白"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text_publisher_cartstate_yue_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_publisher_name_yue_details"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/text_publisher_tag_yue_details"
                    android:text="无卡"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text_publisher_age_yue_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_publisher_name_yue_details"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/text_publisher_cartstate_yue_details"
                    android:text="20岁"
                    android:textSize="15sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backgroundcolor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_menu_yue_on" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/text_jianshenfangname_yue_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:maxLength="12"
                        android:text="格莱美健身房俱乐部"
                        android:textColor="@color/blacklight"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/text_yue_people_hint_yue_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_jianshenfangname_yue_details"
                        android:layout_marginTop="20dp"
                        android:text="共"
                        android:textColor="@color/textgraydark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_yue_people_yue_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/text_yue_people_hint_yue_details"
                        android:text="5"
                        android:layout_marginTop="43dp"
                        android:textColor="@color/myblue"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/text_yue_people_hint2_yue_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/text_yue_people_yue_details"
                        android:text="人"
                        android:layout_marginTop="43dp"
                        android:textColor="@color/myblue"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/text_yue_time_hint_yue_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/text_yue_people_hint_yue_details"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/text_yue_people_hint2_yue_details"
                        android:text="今天"
                        android:textColor="@color/textgraydark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_yue_time_yue_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43dp"
                        android:layout_toEndOf="@+id/text_yue_time_hint_yue_details"
                        android:layout_toRightOf="@+id/text_yue_time_hint_yue_details"
                        android:text="13:30"
                        android:textColor="@color/red"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/text_price_yue_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/text_yue_time_yue_details"
                        android:text="15"
                        android:textColor="@color/orange"
                        android:textSize="23sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/text_price_yue_details"
                        android:text="元/人"
                        android:textColor="@color/orange"
                        android:textSize="23sp" />


                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="65dp"
                android:background="@color/backgroundcolor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/test_location" />

                <TextView
                    android:id="@+id/text_yue_areadetails_yue_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:text="海淀区西土城路10号邮电大学北门学生宿舍B1层"
                    android:textColor="@color/textgray"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="65dp"
                android:background="@color/backgroundcolor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/test_love" />

                <TextView
                    android:id="@+id/text_intent_yue_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="18dp"
                    android:text="我们5个女生，想找个有卡的人带我们进去这家健身房里一起健身。"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backgroundcolor" />


            <Button
                android:id="@+id/button_yue_yue_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_yue_selector"
                android:text="约"
                android:textColor="@color/white"
                android:textSize="20sp"

                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
