<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"
    tools:context=".ui.MineActivity">

    <!--toolbar-->
    <include
        layout="@layout/mytoolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativelayout_account_mine"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_user_touxiang_mine"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/test_ic_touxiang"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/text_user_name_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chilam"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/image_user_touxiang_mine"
                    />

                <TextView
                    android:id="@+id/text_user_yueaccounthint_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约健身号："
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@id/text_user_name_mine"
                    android:layout_toRightOf="@id/image_user_touxiang_mine" />

                <TextView
                    android:id="@+id/text_user_yueaccount_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Land1016"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:layout_below="@id/text_user_name_mine"
                    android:layout_toRightOf="@id/text_user_yueaccounthint_mine" />

                <ImageView
                    android:id="@+id/image_ic_erweima_mine"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="26dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/test_ic_erweima"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativelayout_yue_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_ic_yue_mine"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/ic_yue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/image_ic_yue_mine"
                        android:text="我的约"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/backgroundcolor"/>

                <RelativeLayout
                    android:id="@+id/relativelayout_album_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_ic_album_mine"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="24dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_album"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/image_ic_album_mine"
                        android:text="我的相册"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/backgroundcolor"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativelayout_my_wallet_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_ic_my_wallet_mine"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="24dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_wallet"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/image_ic_my_wallet_mine"
                        android:text="我的钱包"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/backgroundcolor"/>

                <RelativeLayout
                    android:id="@+id/relativelayout_my_zhuanka_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_ic_my_zhuanka_mine"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="24dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_zhuanka"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/image_ic_my_zhuanka_mine"
                        android:text="我的转卡"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativelayout_settings_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_ic_settings_mine"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="24dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_settings"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/image_ic_settings_mine"
                        android:text="设置"/>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
