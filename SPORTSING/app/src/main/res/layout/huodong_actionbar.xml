<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/huodong_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/green" >


        <ImageView
            android:id="@+id/textview_meituan"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/text_acbar_huodong"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="活动"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <ImageButton
            android:id="@+id/imagebutton_publish_huodong"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_city"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_action_addsports" />


      
    </RelativeLayout>
    

